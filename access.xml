<!DOCTYPE access [
        <!ELEMENT access (grant|revoke)*>
        <!ELEMENT grant (#PCDATA)>
        <!ATTLIST grant
                account CDATA #REQUIRED
                acl CDATA #REQUIRED>
        <!ELEMENT revoke (#PCDATA)>
        <!ATTLIST revoke
                acl CDATA #REQUIRED
                account CDATA #REQUIRED>
        ]>
<access>
    <grant acl="view" account="MY_ROLE"/>
    <grant acl="edit" account="MY_ATTRIBUTE"/>
    <grant acl="pouet" account="Toto"/>
    <revoke acl="pouet" account="Toto"/>
</access>